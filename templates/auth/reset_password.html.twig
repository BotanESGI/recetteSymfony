{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-8 bg-white shadow-md rounded px-8 pt-6 pb-8">
        <h1 class="text-xl font-bold text-center mb-6">Réinitialiser le mot de passe</h1>
        <p class="text-gray-600 text-sm mb-4">
            Votre mot de passe doit respecter les règles suivantes :
        </p>
        <ul class="list-disc list-inside">
            <li>Au moins 8 caractères</li>
            <li>Au moins une lettre majuscule</li>
            <li>Au moins un chiffre</li>
            <li>Au moins un caractère spécial</li>
        </ul>
        <form method="post">
            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.plainPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.plainPassword, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.plainPassword) }}
            </div>
            <div class="mb-4">
                {{ form_label(form.confirmPassword, 'Confirmer le mot de passe', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.confirmPassword, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.confirmPassword) }}
            </div>
            <button type="submit"
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
                Réinitialiser le mot de passe
            </button>
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
